<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/pistol_gun_range_grid_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/m9_m17_range_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/machine_gun_hollow_fill"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/imagebutton_border"
        android:clickable="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m9_m17_range_button"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="@string/m9_m17_range_button" />

</RelativeLayout>